<div class=risuto>
<table class="table">
<tbody>
<% users.each do |user| %>
    <tr>
    <td>
        <% if user.image.attached? %>
        <%= image_tag  user.image,style: "border-radius: 50%; width: 50px; height: 50px; object-fit:cover;" %>
        <% end %>
    </td>
    <td><%= link_to user.name, user %></td>
        <td>フォロー: <%= user.followings.count %></td>
        <td>フォロワー: <%= user.followers.count %></td>
        <td><%= render "relationships/btn", user: user, options: { class: "follow-link" } %></td>
    </tr>
<% end %>
</tbody>
</table>
</div>